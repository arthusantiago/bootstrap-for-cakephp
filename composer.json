{
  "name": "arthusantiago/bootstrap-for-cakephp",
  "description": "Automatically copy Bootstrap, Bootstrap Icons, and Popperjs assets to CakePHP webroot directory",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Arthu Santiago",
      "email": "arthusantiago@example.com",
      "homepage": "https://github.com/arthusantiago"
    }
  ],
  "homepage": "https://github.com/arthusantiago/bootstrap-for-cakephp",
  "repository": {
    "type": "git",
    "url": "https://github.com/arthusantiago/bootstrap-for-cakephp.git"
  },
  "keywords": [
    "cakephp",
    "bootstrap",
    "bootstrap-icons",
    "popperjs",
    "assets",
    "composer"
  ],
  "require": {
    "php": ">=8.1",
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "ArthuSantiago\\BootstrapForCakePHP\\": "src/"
    }
  },
  "scripts": {
    "copy-bootstrap-assets": "ArthuSantiago\\BootstrapForCakePHP\\BootstrapAssets::executarCli"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
